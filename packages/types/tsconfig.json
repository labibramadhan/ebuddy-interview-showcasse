{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "declaration": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strict": true,
    "outDir": ".",
    "paths": {
      "@ebuddy/types/*": ["../types/*"]
    }
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}
